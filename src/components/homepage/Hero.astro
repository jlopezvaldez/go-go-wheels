---
import BrandBar from './BrandBar.astro';

// Your Astro component logic here
---

<section class='relative h-screen flex items-center justify-center'>
  <div class='absolute inset-0 bg-cover bg-center z-0 bg-warehouse-image'></div>
  <div class='absolute inset-0 bg-black opacity-50 z-10'></div>
  <div class='z-20 text-white text-center py-10'>
    <div class='px-4'>
      <div class='my-8'>
        <div class='flex justify-center items-center mb-10'>
          <div
            class='w-28 h-28 bg-white rounded-full flex items-center justify-center overflow-hidden'
          >
            <img
              src='gogo-circle-bg.png'
              class='object-contain'
              alt='Go Go Logo'
            />
          </div>
        </div>

        <h1 class='text-4xl sm:text-6xl font-bold mb-4 tracking-tight'>
          <span class='gradient-text'>Don't Pay Retail</span> on New Wheels and Tires
        </h1>
        <p class='mt-6 text-xl leading-7 text-white sm:leading-8 sm:text-2xl'>
          We're a private distributor with <span
            class='italic gradient-text font-semibold'>exclusive</span
          >
          pricing just for you
        </p>
      </div>
      <div class='flex flex-col sm:flex-row gap-4 max-w-3xl mx-auto mb-6'>
        <div class='flex-grow'>
          <input
            type='tel'
            required
            placeholder='Enter your phone number'
            class='w-full px-4 py-4 text-lg text-gray-900 placeholder-gray-500 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-yellow-600 focus:border-transparent'
            pattern='[0-9]{3}-[0-9]{3}-[0-9]{4}'
            title='Phone number format: 123-456-7890'
          />
        </div>
        <div>
          <button
            hx-get='/modals/new'
            hx-target='dialog'
            class='inline-flex items-center text-xl justify-center w-full px-8 py-4 font-medium text-white transition-all duration-200 bg-amber-400 border border-transparent rounded-xl hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black'
          >
            Get Your Free Custom Quote
          </button>
        </div>
      </div>
      <h3 class='font-medium text-lg mb-2'>
        We work with the biggest brands to get you premium quality at the best
        price
      </h3>
    </div>
    <div class='my-10'><BrandBar /></div>
  </div>
</section>
