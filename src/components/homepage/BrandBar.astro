---
// BrandLogos.astro
const brands = [
  { name: 'Nitto Tires', logo: 'nitto-1.svg' },
  { name: 'Toyo Tires', logo: 'toyo-logo@2x.png' },
  { name: 'Falken Tires', logo: 'falkenn.svg' },
  { name: 'Goodyear Tires', logo: 'goodyear-logo.svg' },
  { name: 'Firestone Tires', logo: 'firestone.png' },
  { name: 'Venom', logo: 'venom-logo.png' },
  { name: 'Lock Off-Road Wheels ', logo: 'lock-offroad.png' },
  // Add more brands as needed
];
---

<div class='mt-8 sm:mt-12'>
  <div
    class='grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 gap-4 items-center justify-items-center'
  >
    {
      brands.map((brand) => (
        <div class='flex items-center justify-center p-2'>
          <img
            src={brand.logo}
            alt={`${brand.name} logo`}
            class='max-h-8 sm:max-h-10 md:max-h-12 w-auto object-contain filter transition-all duration-300'
          />
        </div>
      ))
    }
  </div>
</div>
