---
// NavBar.astro
const navLinks = [
  { href: '/about', text: 'About' },
  { href: '/gallery', text: 'Gallery' },
  { href: '/contact', text: 'Contact' },
];
---

<nav class='bg-white shadow-md'>
  <div class='sm:max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
    <div class='flex sm:flex-wrap items-center justify-between'>
      <!-- Left side: Navigation Links -->
      <div class='hidden sm:flex sm:items-center sm:space-x-8 sm:w-2/5'>
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              class='text-gray-900 hover:underline underline-offset-4 inline-flex items-center px-1 pt-1 text-lg font-semibold'
            >
              {link.text}
            </a>
          ))
        }
      </div>

      <!-- Center: Logo -->
      <div class='flex items-center justify-start sm:w-auto sm:justify-end'>
        <div class='flex-shrink-0'>
          <a href='/'>
            <img
              class='block h-24 w-24'
              src='/gogo-no-text.png'
              alt='Company Logo'
            />
          </a>
        </div>
      </div>

      <!-- Right side: CTA Button -->
      <div class='flex items-center justify-center sm:w-2/5 sm:justify-end'>
        <div class='flex-shrink-0 items-center'>
          <button
            type='button'
            hx-get='/modals/new'
            hx-target='dialog'
            class='w-full sm:w-auto items-center px-6 sm:px-12 py-2 border-2 border-black text-lg font-semibold rounded-md text-black shadow-sm hover:bg-black hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'
          >
            <span>Get your free quote</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile menu button -->
  <div class='sm:hidden absolute top-4 left-4'>
    <!-- ... (mobile menu button code remains the same) ... -->
  </div>
</nav>
