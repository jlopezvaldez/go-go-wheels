---
import Layout from '@layouts/Layout.astro';
---

<Layout title='Contact | Go Go Wheels & Tires'>
  <div class='flex flex-col min-h-screen'>
    <main
      class='flex-grow flex items-center justify-center bg-white px-4 sm:px-6 lg:px-8'
    >
      <div class='max-w-3xl w-full'>
        <div class='text-center'>
          <h1 class='text-4xl font-extrabold text-gray-900 sm:text-5xl'>
            Contact Us
          </h1>
          <p class='mt-4 text-xl text-gray-500'>
            We're here to help with all your tire and wheel needs. Reach out to
            us anytime!
          </p>
        </div>
        <div class='mt-12 grid grid-cols-1 gap-8 sm:grid-cols-2'>
          <div
            class='relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-amber-500'
          >
            <div class='flex-shrink-0'>
              <svg
                class='h-10 w-10 text-amber-500'
                xmlns='http://www.w3.org/2000/svg'
                fill='none'
                viewBox='0 0 24 24'
                stroke='currentColor'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z'
                ></path>
              </svg>
            </div>
            <div class='flex-1 min-w-0'>
              <a href='tel:+14803319151' class='focus:outline-none'>
                <span class='absolute inset-0' aria-hidden='true'></span>
                <p class='text-sm font-medium text-gray-900'>Phone</p>
                <p class='text-sm text-gray-500 truncate'>480-331-9151</p>
              </a>
            </div>
          </div>
          <div
            class='relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-amber-500'
          >
            <div class='flex-shrink-0'>
              <svg
                class='h-10 w-10 text-amber-500'
                xmlns='http://www.w3.org/2000/svg'
                fill='none'
                viewBox='0 0 24 24'
                stroke='currentColor'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
                ></path>
              </svg>
            </div>
            <div class='flex-1 min-w-0'>
              <a href='' class='focus:outline-none'>
                <span class='absolute inset-0' aria-hidden='true'></span>
                <p class='text-sm font-medium text-gray-900'>Email</p>
                <p class='text-sm text-gray-500 truncate'>coming soon</p>
              </a>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>
