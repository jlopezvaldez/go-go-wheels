// In a real application, you'd likely fetch this data from an API or CMS
const galleryItems = [
  {
    id: 1,
    src: pictureone.src,
    alt: 'Lock Off-Road Wheels and Off-Road tires',
    category: 'Wheels',
  },
  {
    id: 2,
    src: picturetwo.src,
    alt: 'New tires for delivery',
    category: 'Tires',
  },
  {
    id: 3,
    src: picturethree.src,
    alt: 'Pickup truck tires for delivery',
    category: 'Tires',
  },
  {
    id: 4,
    src: picturefour.src,
    alt: 'Off-road tires for delivery',
    category: 'Tires',
  },
  {
    id: 5,
    src: picturefive.src,
    alt: 'The warehouse',
    category: 'Tires',
  },
  {
    id: 6,
    src: picturesix.src,
    alt: 'DRW Rims for a customer',
    category: 'Wheels',
  },
  {
    id: 7,
    src: pictureseven.src,
    alt: 'Boxes of rims for delivery',
    category: 'Wheels',
  },
  {
    id: 8,
    src: pictureeight.src,
