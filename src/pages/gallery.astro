    alt: 'Lock Off-Road rims for a customer',
    category: 'Wheels',
  },
  {
    id: 11,
    src: pictureeleven.src,
    alt: 'New tires for delivery',
    category: 'Tires',
  },
];

const seo = {
  title: 'Gallery | Go Go Wheels and Tires',
  description:
    'Browse our gallery of discount tires and wheels in Phoenix. See top brands, the warehouse, and previous orders. View our five star service and get a free quote today',
};
---

<Layout seo={seo}>
  <main class='container mx-auto px-4 py-8'>
    <h1 class='text-4xl font-bold text-center mb-8'>Check out our work</h1>

    <p class='text-xl text-center mb-12'>
      These are pictures from previous orders and customers
    </p>

    <div class='grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6'>
      {
        galleryItems.map((item) => (
          <div class='gallery-item overflow-hidden rounded-lg shadow-lg transition-transform duration-300 hover:scale-105'>
            <img
              src={item.src}
              alt={item.alt}
              class='w-full h-80 object-cover'
              loading='lazy'
            />
            {/* <div class='p-4 bg-white'>
              <h3 class='text-lg font-semibold'>{item.category}</h3>
              <p class='text-sm text-gray-600'>{item.alt}</p>
            </div> */}
          </div>
        ))
      }
    </div>
  </main>
</Layout>

<style>
  .gallery-item {
    cursor: pointer;
  }
</style>
